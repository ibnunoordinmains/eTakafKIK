                                <input type="text" class="form-control" @bind="modelDB.UserId" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0,14)" maxlength="14" id="userId" placeholder="No. Kad Pengenalan" required>
                                <label for="userId"><i class="bi bi-person me-2"></i></label>
                                <div class="invalid-feedback">
                                    Masukkan No. Kad Pengenalan Anda
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                         <input type="password" class="form-control" @bind="modelDB.Password" id="password" placeholder="Katalaluan" required minlength="6">
                                <label for="password"><i class="bi bi-lock me-2"></i></label>
                                <div class="invalid-feedback">
                                    Katalaluan tidak memenuhi spesifikasi
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                <i class="fa-light fa-right-to-bracket pe-2"></i>Login
                            </button>
                    </EditForm>                        

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <a href="LupaPassword" class="text-decoration-none fw-bold">Lupa katalaluan?</a>
                            <a href="PendaftaranId" class="text-decoration-none fw-bold">Akaun Baru</a>                           
                        </div>
                </div>
            </div>
