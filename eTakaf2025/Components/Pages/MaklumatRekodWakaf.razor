    private string GetColorKategori(string kategori)
    {
        return kategori switch
        {
            "Bangunan" => "text-primary",
            "Pertanian" => "text-success",
            "Strata" => "text-info",
            _ => "text-dark"
        };
    }


    protected override async Task OnInitializedAsync()
    {
        Jeniss = Jenis;
        if (Jeniss == "TWA") Message = "Laporan Tanah Wakaf AM (Tanah Kosong)";
        if (Jeniss == "TWK") Message = "Laporan Tanah Wakaf KHAS (Tanah Kosong)";
        if (Jeniss == "TWAS") Message = "Laporan Tanah Wakaf AM (Bukan Tanah Kosong)";
        if (Jeniss == "TWKS") Message = "Laporan Tanah Wakaf KHAS (Bukan Tanah Kosong)";

        if (Jeniss == "TWABS") Message = "Laporan Tanah Wakaf AM (Bukan Sewaan)";
        if (Jeniss == "TWKBS") Message = "Laporan Tanah Wakaf KHAS (Bukan Sewaan)";

        if (Jeniss == "Seremban") Message = "Laporan Tanah Wakaf Daerah Seremban";
        if (Jeniss == "Kuala Pilah") Message = "Laporan Tanah Wakaf Daerah Kuala Pilah";
        if (Jeniss == "Rembau") Message = "Laporan Tanah Wakaf Daerah Rembau";
