 <div class="container-fluid mt-1">
    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-table me-2"></i>@Message</h5>
        </div>

        <div class="card-body bg-light rounded-bottom-4">
            @if (adaRekod)
            {
                <div class="table-responsive">
                    <table id="myTable" class="table table-hover align-middle text-nowrap table-bordered border-light-subtle rounded-3 overflow-hidden">
                        <thead class="table-success text-center align-middle">
                            <tr>
                                <th>#</th>
                                <th>No Fail</th>
                                <th>No Lot</th>
                                <th>Daerah</th>
                                <th>Mukim/Bandar</th>
                                <th>Kategori</th>
                                <th>Catatan</th>
                                <th>Keluasan Tanah Diwakaf (Ha)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var xx in _dataB)
                            {
                                <tr>
                                    <td class="text-center">@xx.Id</td>
                                    <td class="text-center text-primary">@xx.NO_DAFTAR</td>
                                    <td class="text-center fw-bold">@xx.NO_LOT</td>
                                    <td class="fw-bold text-primary">@xx.DAERAH</td>
                                    <td class="fw-bold text-danger">@xx.MUKIM_PEKAN_BANDAR.ToString().ToUpper()</td>
                                    <td class="fw-bold @GetColorKategori(xx.KEGUNAAN_KATEGORI)">@xx.KEGUNAAN_KATEGORI</td>
                                    <td>@xx.CATATAN</td>
                                    <td class="text-center fw-bold text-danger">@(xx.KELUASAN_YANG_DIWAKAFKAN_ha.ToString("F2") ?? "0.00")</td>
                                    <td>
                                        <button title="Info Lanjut" data-bs-toggle="modal" data-bs-target="#staticCenteredModal" class="btn btn-icon btn-success rounded-pill btn-wave" @onclick="()=>getInfoDetails(xx)">
                                            <i class="fa-regular fa-circle-info"></i>
                                         </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }           
        </div>
    </div>
</div>


